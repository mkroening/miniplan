<div class="small-12 columns">
	<ul class="breadcrumbs">
		<li>{{#link-to 'index'}}Miniplan{{/link-to}}</li>
		<li>{{#link-to 'miniplaene'}}Minipl√§ne{{/link-to}}</li>
		<li class="active">{{internalTitle}}</li>
	</ul>
</div>


<div class="small-12 large-9 columns">
	{{input type="text" class="headlineedit" value=internalTitle}}
	{{#each gottesdienste}}
	<div class="row">
		<div class="small-6 columns">
			<div class="collapse row">
				<div class="small-7 columns">
					{{input type="date" value=date}}
				</div>
				<div class="small-5 columns">
					{{input type="time" value=time}}
				</div>
				<div class="small-12 columns">
					{{input type="text" value=annotation}}
				</div>
			</div>
		</div>
		<div class="small-6 columns">
			{{#each einteilungen}}
				{{ministrant.givenName}}
			{{/each}}
			<div class="collapse row">
				<div class="small-5 columns">
					{{input type="text" value="1"}}
				</div>
				<div class="small-2 columns text-center"><div class="prefix"> und </div></div>
				<div class="small-5 columns">
					{{input type="text" value="2"}}
				</div>
			</div>
		</div>
	</div>
	<hr>
	{{/each}}
</div>

<div class="small-12 large-3 columns">
	{{#each ministrants}}
		{{shortenedName}}
	{{/each}}
</div>
