<div class="row">
	<div class="small-12 large-6 columns">
		<div class="collapse row" >
			<div class="small-7 columns collapse-input">
				{{input type="date" value=date}}
			</div>
			<div class="small-5 columns collapse-input">
				{{input type="time" value=time}}
			</div>
			<div class="small-12 columns">
				{{input type="text" value=annotation}}
			</div>
		</div>
	</div>
	<div class="small-12 large-6 columns">
		{{#each splittedEinteilungen}}
		<div class="collapse row">
			<div class="small-5 columns">
				{{view App.DroppableTextView model=links.acolyte}}
			</div>
			<div class="small-2 columns text-center"><span class="prefix"> und </span></div>
			<div class="small-5 columns">
				{{view App.DroppableTextView model=rechts.acolyte}}
			</div>
		</div>
		{{/each}}
	</div>
	<div class="small-12 columns"><hr></div>
</div>
